{
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/*"
    ],
    "compilerOptions": {
        "outDir": "./dist",
        "module": "CommonJS",
        "target": "ES2019",
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "DOM",
            "ES2019",
            "ES2020.Promise"
        ]
    }
}
